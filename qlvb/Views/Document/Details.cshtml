    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane fade" id="keyword">
            @if (ViewBag.chd != null && ViewBag.chd.Count > 0)
            {
                <table style="width:100%;text-align:left;">
                    <tr>
                        <td id="lstindex" class="col-lg-3" valign="top" style="background:#ccc;color:#000000;overflow: scroll;"></td>
                        <td class="col-lg-9" style="background:#00ffff;">
                            @foreach (var item in ViewBag.chd)
                            {
                                if (item.item_content.Contains(ViewBag.keyword))
                                {
                                    <text>
                                        <p style="width:100%;text-align:left;" id="@item.item_id"><b style="color:#0094ff">@Html.Raw(@qlvb.Config.showCHD(@item.item_id))</b>@Html.Raw(@qlvb.Config.showQuote(@item.item_content, @ViewBag.keyword))</p>
                                    </text>
                                    lstindex += "<p>-<a href=\"#" + item.item_id + "\">" + qlvb.Config.showCHD(item.item_id) + "</a></p>";
