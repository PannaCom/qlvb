                var text4=items[10];
                //alert(text4.toLowerCase());
                var ddcat4 = document.getElementById('cat4');
                for (var i = 0; i < ddcat4.options.length; i++) {
                    if (ddcat4.options[i].text.toLowerCase() === text4.toLowerCase()) {
                        ddcat4.selectedIndex = i;
                        break;
                    }
                }
                //Xem ai ký
                var text3=items[11];
