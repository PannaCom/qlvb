                    if (ddcat2.options[i].text === text2) {
                        ddcat2.selectedIndex = i;
                        break;
                    }
                }
                items[6]=items[6].replace(items[0]+" ,","");
                $('#keyword1').val(items[2]);
                $('#keyword2').val(items[3]);
                $('#keyword3').val(items[4]);
                $('#keyword4').val(items[5]);
                $('#keyword5').val(items[6]);                
