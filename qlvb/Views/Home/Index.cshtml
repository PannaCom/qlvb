                    <div class="span9">
                        @if (ViewBag.keyword != "")
                        {
                            <text> <h2>Tìm thấy các văn bản</h2></text>
                        }
                        else
                        {
                            <text> <h2>Xem nhiều nhất</h2></text>
                        }

