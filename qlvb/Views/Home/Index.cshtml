            <div style="width:100%;float:left;display:block;text-align: left;margin-top:2px;">
                <section class="refinements-summary">
                    @if (ViewBag.f1 != "" || ViewBag.f2 != "" || ViewBag.f3 != "" || ViewBag.f4 != "")
