@model qlvb.Models.cat1

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin2.cshtml";
}
<div id="tf-services" style="width:100%;padding-top:100px;">
<div class="container">
<h2>Thêm mới lĩnh vực</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
       

        <div class="editor-label">
            Tên lĩnh vực
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>
        
        <div class="editor-label">
            Hệ số(càng lớn càng xếp trên cùng khi lọc)
        </div>
        <div class="editor-field">
            <input type="text" name="no" id="no" style="width:300px;">
        </div>

        <p>
            <input type="submit" value="Thêm" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</div>
</div>
